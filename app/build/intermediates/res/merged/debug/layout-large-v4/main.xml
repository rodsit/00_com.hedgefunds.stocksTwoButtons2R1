<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#444444"
    android:layout_height="fill_parent"
    >
    <ScrollView   
        android:id="@+id/ScrollView01"  
      android:layout_height="fill_parent" 
      android:background="#444444"  
      android:layout_width="fill_parent" > 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#444444"  
    android:layout_height="fill_parent">
<ImageButton 
android:src="@drawable/button"
android:layout_centerHorizontal="false"
android:id="@+id/Button01" 
android:layout_margin="15dip"
android:layout_width="wrap_content" 
android:hapticFeedbackEnabled="true"
android:layout_height="wrap_content"></ImageButton>
<ImageButton 
android:src="@drawable/secondbutton"
android:layout_toRightOf="@+id/Button01"
android:text="@string/next_button"
android:focusable="true"
android:layout_centerHorizontal="true"
android:id="@+id/SecondButton" 
android:layout_margin="15dip"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"></ImageButton>

<Button android:text="@string/get_answer" 
android:id="@+id/Button02"
android:layout_centerHorizontal="true"
android:textSize="24dip"
android:visibility="gone"
android:layout_margin="15dip"
android:layout_width="fill_parent" 
android:layout_below="@+id/Button01"
android:layout_alignParentLeft="true"
android:hapticFeedbackEnabled="true"
android:layout_height="wrap_content"></Button>
  
<Button android:id="@+id/Button05" android:layout_below="@+id/Button01" android:padding="0dip" android:layout_centerHorizontal="false" android:layout_marginBottom="35dip" android:layout_marginLeft="15dip"  android:drawableLeft="@drawable/sound" android:layout_width="50dip" android:layout_height="50dip"></Button>
<TextView android:visibility="gone" android:layout_margin="15dip" android:id="@+id/TextView01" android:layout_below="@+id/Button02"    android:textColor="#ffffff" android:textStyle="bold" android:textSize="1dip"  android:layout_width="wrap_content" android:layout_height="1dip"></TextView>
<Button android:id="@+id/Button06" android:layout_below="@+id/Button01" android:padding="0dip" android:layout_marginLeft="40dip" android:layout_marginBottom="35dip" android:layout_centerHorizontal="true"  android:drawableRight="@drawable/info" android:layout_toRightOf="@+id/Button05" android:layout_width="50dip" android:layout_height="50dip"></Button>
<TextView android:visibility="gone" android:layout_margin="15dip"  android:id="@+id/TextView01" android:layout_below="@+id/Button02"    android:textColor="#ffffff" android:textStyle="bold" android:textSize="1dip"  android:layout_width="wrap_content" android:layout_height="1dip"></TextView>

<TextView android:layout_below="@+id/Button06"   android:id="@+id/TextView02" android:layout_marginTop="1dip"  android:layout_marginLeft="15dip" android:layout_marginBottom="5dip" android:textColor="#ffffff" android:textStyle="bold" android:textSize="30dip"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<TextView android:layout_below="@+id/TextView02" android:id="@+id/TextView03" android:layout_marginTop="5dip"  android:layout_marginLeft="15dip" android:layout_marginBottom="15dip" android:textColor="#ffffff" android:textStyle="bold" android:textSize="30dip"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

<TextView android:visibility="gone" android:layout_margin="15dip" android:layout_centerHorizontal="true" android:id="@+id/TextView04" android:layout_below="@+id/TextView03"  android:textColor="#ffffff" android:textStyle="bold" android:textSize="20dip"  android:layout_width="wrap_content" android:layout_height="1dip"></TextView>
<TextView android:visibility="gone"  android:id="@+id/TextView05" android:layout_centerHorizontal="true" android:layout_below="@+id/TextView04"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<TextView android:visibility="gone"  android:id="@+id/TextView06" android:layout_below="@+id/TextView05"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<Button android:text="@string/speak_answer" 
android:id="@+id/Button03"
android:visibility="gone" 
android:layout_centerHorizontal="false"
android:textSize="20dip"
android:layout_width="wrap_content" 
android:layout_margin="15dip"
android:hapticFeedbackEnabled="true"
android:layout_below="@+id/TextView06"
android:layout_height="50dip"></Button>
<Button 
android:layout_below="@+id/TextView03"
android:id="@+id/Button17" 
android:visibility="gone"
android:textSize="20dip"
android:layout_width="wrap_content" 
android:layout_marginTop="15dip"
android:layout_marginLeft="15dip"
android:text="@string/market_look" 
android:layout_height="wrap_content"></Button> 
<TextView android:visibility="gone" android:id="@+id/TextView07" android:layout_below="@+id/TextView06"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<TextView android:visibility="gone" android:id="@+id/TextView08" android:layout_below="@+id/TextView07"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
 
</RelativeLayout>
</ScrollView>
</LinearLayout>