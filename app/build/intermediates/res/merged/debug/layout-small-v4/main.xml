<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#444444"
    android:layout_height="fill_parent"
    >
<ScrollView 
android:id="@+id/ScrollView01"
android:layout_height="fill_parent" 
android:background="#444444"  
android:layout_width="fill_parent" > 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:background="#444444"  
android:layout_height="fill_parent">
<ImageButton android:textColor="#ffffff" 
android:src="@drawable/button"
android:text="@string/next_button"
android:focusable="true"
android:layout_centerHorizontal="false"
android:id="@+id/Button01" 
android:textSize="14dip" 
android:layout_marginTop="10dip"
android:layout_marginLeft="10dip"
android:layout_marginBottom="5dip"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"></ImageButton>
<ImageButton 
android:src="@drawable/secondbutton"
android:layout_toRightOf="@+id/Button01"
android:text="@string/next_button"
android:focusable="true"
android:layout_centerHorizontal="true"
android:id="@+id/SecondButton" 
android:layout_marginTop="10dip"
android:layout_marginLeft="10dip"
android:layout_marginBottom="5dip"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"></ImageButton>

<Button android:text="@string/get_answer" 
android:id="@+id/Button02"
android:layout_centerHorizontal="true"
android:visibility="gone"
android:layout_height="35dip"
android:textSize="10dip"
android:layout_margin="5dip"
android:layout_width="fill_parent" 
android:layout_below="@+id/Button01"
android:layout_alignParentLeft="true"
android:hapticFeedbackEnabled="true" 
></Button> 

<Button android:focusable="true" android:paddingRight="5dip" android:drawableRight="@drawable/sound"  android:id="@+id/Button05" android:layout_below="@+id/Button01" android:layout_width="35dip" android:layout_height="35dip" android:layout_marginTop="5dip" android:layout_marginBottom="5dip" android:layout_marginLeft="20dip"></Button><TextView android:text=" " android:layout_margin="15dip" android:id="@+id/TextView01" android:layout_below="@+id/Button02" android:textColor="#ffffff" android:textStyle="bold" android:textSize="1dip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="1dip"></TextView>
<Button android:focusable="true" android:paddingRight="5dip" android:drawableRight="@drawable/info"   android:id="@+id/Button06" android:layout_below="@+id/Button01" android:layout_width="35dip" android:layout_height="35dip" android:layout_marginTop="5dip" android:layout_marginBottom="5dip" android:layout_marginLeft="10dip" android:layout_toRightOf="@+id/Button05" ></Button>
<TextView android:layout_marginTop="5dip" android:layout_marginLeft="5dip" android:layout_marginBottom="5dip" android:id="@+id/TextView01" android:layout_below="@+id/Button02"    android:textColor="#ffffff" android:textStyle="bold" android:textSize="1dip"  android:layout_width="wrap_content" android:layout_height="1dip"></TextView>
 
<TextView android:id="@+id/TextView02" android:layout_marginTop="5dip" android:layout_marginLeft="5dip"  android:layout_marginBottom="5dip" android:layout_centerHorizontal="false" android:layout_below="@+id/Button06"  android:textColor="#ffffff" android:textStyle="bold" android:textSize="16dip"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<TextView android:id="@+id/TextView03" android:layout_margin="5dip" android:layout_centerHorizontal="false" android:layout_below="@+id/TextView02"  android:textColor="#ffffff" android:textStyle="bold" android:textSize="16dip"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

<TextView android:visibility="gone" android:layout_margin="5dip" android:layout_centerHorizontal="true" android:id="@+id/TextView04" android:layout_below="@+id/TextView03"  android:textColor="#ffffff" android:textStyle="bold" android:textSize="10dip"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<TextView android:visibility="gone" android:id="@+id/TextView05" android:layout_centerHorizontal="true" android:layout_below="@+id/TextView04"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView> 
<TextView android:visibility="gone" android:id="@+id/TextView06" android:layout_below="@+id/TextView05"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView> 
<Button android:text="@string/speak_answer" 
android:id="@+id/Button03" 
android:layout_centerHorizontal="false" 
android:visibility="gone"
android:layout_margin="5dip"
android:textSize="10dip"
android:layout_width="wrap_content" 
android:layout_below="@+id/TextView06"
android:layout_height="50dip"></Button>
<TextView android:visibility="gone" android:id="@+id/TextView07" android:layout_below="@+id/TextView06"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<TextView android:visibility="gone" android:id="@+id/TextView08" android:layout_below="@+id/TextView07"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
 
<Button
    android:id="@+id/Button17"
    android:layout_width="wrap_content"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:layout_below="@+id/TextView03"
    android:layout_centerHorizontal="true" 
    android:layout_marginTop="10dip"
    android:text="@string/market_look"
    android:textSize="10dip" /> 

</RelativeLayout>
</ScrollView>
</LinearLayout>